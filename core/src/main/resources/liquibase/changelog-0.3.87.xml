<databaseChangeLog
   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

   <changeSet author="fred" id="addColumnQuicklookPath">
      <addColumn tableName="PRODUCTS">
         <column name="QUICKLOOK_PATH" type="VARCHAR(2048)">
         </column>
      </addColumn>
   </changeSet>
   <changeSet author="fred" id="addColumnThumbnailPath">
      <addColumn tableName="PRODUCTS">
         <column name="THUMBNAIL_PATH" type="VARCHAR(2048)">
         </column>
      </addColumn>
   </changeSet>
   
   <changeSet author="fred" id="copyBlobToFiles" runOnChange="true">
      <customChange 
         class="fr.gael.dhus.database.liquibase.CopyProductImagesBlobToFile">
      </customChange>
   </changeSet>
   
   <changeSet author="fred" id="dropForeignKeyProduct_ImagesID">
      <dropForeignKeyConstraint 
         baseTableName="PRODUCTS" 
         constraintName="FKF2D1C164E3E426AC"/>
   </changeSet>
   
   <changeSet author="fred" id="dropColumnImages">
      <dropColumn columnName="IMAGES_ID" tableName="PRODUCTS"/>
   </changeSet>
   
   <changeSet author="fred" id="dropColumnQuicklookFlag">
      <dropColumn tableName="PRODUCTS" columnName="QUICKLOOK_FLAG"/>
   </changeSet>
   
   <changeSet author="fred" id="dropColumnThumbnailFlag">
      <dropColumn tableName="PRODUCTS" columnName="THUMBNAIL_FLAG"/>
   </changeSet>

   <changeSet author="fred" id="dropTableProductImages">
      <dropTable tableName="PRODUCT_IMAGES"/>
   </changeSet>
   <!-- 
   <changeSet author="fred" id="dropIndexPRoductImages">
      <dropIndex indexName="SYS_IDX_10440 " tableName="PRODUCT_IMAGES"/>
   </changeSet>
   -->
</databaseChangeLog>
