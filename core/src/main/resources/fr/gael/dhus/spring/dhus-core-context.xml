<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:context="http://www.springframework.org/schema/context"
   xsi:schemaLocation="
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
      http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

   <!-- Load core context -->
   <import resource="dhus-core-database.xml" />
   <import resource="dhus-core-hibernate.xml" />
   <import resource="dhus-core-commons.xml" />
   <import resource="dhus-core-jobs.xml" />
   <import resource="dhus-core-security.xml" />
   <import resource="dhus-core-cache.xml" />
   <import resource="dhus-core-datastore.xml" />
   <import resource="dhus-core-transformation.xml" />

   <!-- Load GUIs contexts -->
   <import resource="classpath*:spring/dhus-gui-*-context.xml" />

   <!-- Load monitoring context -->
   <import resource="dhus-core-monitoring.xml" />
   <import resource="classpath*:monitoring.xml" />

</beans>
